<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnDica1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="dica"
                android:text="@string/btndica" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="@string/txtFase1"
                android:textColor="#000000"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/btnBatata"
                android:layout_width="match_parent"
                android:layout_height="482dp"
                android:contentDescription="@string/descimg1"
                android:onClick="pure"
                app:srcCompat="@drawable/batatacasca" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>