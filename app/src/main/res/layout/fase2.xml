<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnDica2"
            android:layout_width="254dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:onClick="dica2"
            android:text="@string/btndica2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:text="@string/txtFase2"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:contentDescription="@string/descimg3"
            app:srcCompat="@drawable/mapa" />

        <ImageButton
            android:id="@+id/btnAlemanha"
            android:layout_width="254dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/descimg7"
            android:visibility="visible"
            app:srcCompat="@drawable/alemanha" />

        <ImageButton
            android:id="@+id/btnBelgica"
            android:layout_width="254dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/descimg8"
            android:onClick="belgica"
            app:srcCompat="@drawable/belgica" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="254dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/descimg9"
            app:srcCompat="@drawable/europa" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>