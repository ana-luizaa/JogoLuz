<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtChocolate"
            android:layout_width="396dp"
            android:layout_height="131dp"
            android:text="@string/txtchocolate"
            android:textColor="#000000"
            android:textSize="24sp"
            android:translationX="10dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:contentDescription="@string/descimg6"
            app:srcCompat="@drawable/chocolate" />

        <Button
            android:id="@+id/btnfase1"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:onClick="fase3"
            android:text="@string/btnfase1"
            android:translationX="240dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>